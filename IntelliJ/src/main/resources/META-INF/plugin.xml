<idea-plugin>
    <!-- Eindeutige Plugin-ID -->
    <id>net.villagerzock.simpleEventToolkit</id>

    <!-- Anzeigename -->
    <name>SimpleEvents Toolkit</name>

    <!-- Hersteller -->
    <vendor>
        Villagerzock
    </vendor>

    <!-- Kurze Beschreibung -->
    <description><![CDATA[
	Provides PSI augmentation and error Highlighting for the SimpleEvents Library.
	]]></description>

    <!-- WICHTIG: Java-PSI verfÃ¼gbar machen -->
    <depends>com.intellij.modules.java</depends>

    <!-- Optional aber empfohlen -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension Registration -->
    <extensions defaultExtensionNs="com.intellij">
        <lang.psiAugmentProvider implementation="net.villagerzock.intelliJ.augment.AugmentProvider"/>
        <implicitUsageProvider implementation="net.villagerzock.intelliJ.usage.UsageProvider"/>
        <codeInsight.daemonBoundCodeVisionProvider implementation="net.villagerzock.intelliJ.codeVision.ListenersCodeVision"/>
        <codeInsight.daemonBoundCodeVisionProvider implementation="net.villagerzock.intelliJ.codeVision.EmittersCodeVision"/>
        <completion.contributor language="JAVA" implementationClass="net.villagerzock.intelliJ.completion.EventMethodCompletionFilter"/>
        <localInspection
                language="JAVA"
                shortName="EventMethodCall"
                displayName="@Event method call"
                groupName="Villagerzock"
                enabledByDefault="true"
                implementationClass="net.villagerzock.intelliJ.error.EventMethodCallInspection"/>
    </extensions>

</idea-plugin>
